@import 'components/bootstrap-reboot.styl'
@import 'components/globals.styl'

body
  width: 100vw
  height: 100vh

// -----------------------------------------------------top-bar
.top
  position: fixed
  top: 0
  width: 100%
  height 70px
  background-color: white
  &-bar
    height: 100%
    background-image: linear-gradient(to right, rgba(third-cl, .8), rgba(first-cl) )
    padding-top: 20px
    box-shadow: -1px 1px 6px rgba(0,0,0,.4);
    text-align: center
    h1
      font-family: fontOne
      font-weight: 500
      font-size: 1.5em
      color: white
    &__search
      position: fixed
      top: 20px
      right: 10px
      visibility hidden
      display: flex
      justify-content: space-around
      margin: 0 auto
      padding: 0 5px
      width: 95%
      height: 40px
      background-color: #fff
      border-radius: 10px
      box-shadow: -1px 1px 6px rgba(0,0,0,.4)
      input
        outline: none
        width: 80%
        background: transparent
        border: none
        font-size: 1.1em
        color: dark-cl
      .icon
        width: 40px
        height: 100%
        display: flex
        justify-content: center
        align-items: center
        i
          font-size: 1.2em
          color: rgba(dark-cl, .8)
        .cancel
          font-size: 1em
// -----------------------------------------------------menu
.menu
  position: fixed
  bottom: 0
  width: 100%
  height: 60px
  box-shadow: -1px -1px 6px rgba(0,0,0,.4);
  background-color: #fff
  &__button
    height: 100%
    display: flex
    justify-content: space-around
    align-items: center
    a
      display: flex
      flex-flow: column
      align-items: center
      text-decoration: none
      i
        font-size: 1.6em
        color: dark-cl
      span
        padding-top: 2px
        font-weight: 800
        font-size: .7em
        color: first-cl

// -----------------------------------------------------login-index
.login
  background-image: linear-gradient( rgba(first-cl), rgba(third-cl))
  height: 100%
  &__sect
    height 100%
    width: 90%
    display: flex
    flex-flow: column
    justify-content: space-evenly
    margin: auto
    padding-top: 50%
    text-align: center
    color: #ffffff
    h1
      font-family: fontOne
      font-weight: 500
      font-size: 5em
    &--cont
      width: 100%
      background-color: rgba(#ffffff, .3)
      border-radius: 5px
      padding: 10% 5%
      box-shadow: 0px 6px 11px -2px rgba(0,0,0,0.1)
      h3
        margin: 0
        min-width: 250px
      h2
        line-height: 1em
      .social
        display: flex
        justify-content: space-evenly
        max-width 300px
        margin: auto
        padding-top: 5%
        a
          color: #ffffff
          text-decoration: none
        .btn
          border-radius: 5px
          padding: 10px 15px
          font-size: 1.5em
        .btn.g
          background-color: #db4437
        .btn.f
          background-color: #4267b2
