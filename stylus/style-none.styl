// -----------------------------------------------------home
.home
  width: 95%
  max-height: calc(100% - 140px)
  overflow: auto
  margin: 70px auto 0
  padding-top: 5px
  span
   font-weight: 600
   color: dark-cl
  &__card
    height: 150px
    border-radius: 5px
    margin-top: 5px
    margin-bottom: 15px
    box-shadow: -1px 3px 6px rgba(0,0,0,.2);
    a
      text-decoration: none
    &--cover
      height 100px
      img
        border-radius: 5px 5px 0 0 
        // border-top-left-radius:  5px
        // border-top-right-radius: 5px
        height: 100%
        width: 100%
    &--info
      display: flex
      justify-content: space-between
      padding: 0 20px 0 10px
      height 50px
      &-data
        width: 100%
        display: flex
        flex-flow: column
        justify-content: center
        line-height: .8em
        h2
          margin-bottom: 4px
          font-family: fontOne
          font-weight: 500
          font-size: 1.2em
        .info-buss
          display: flex
          justify-content: space-between
          font-family: fontTwo
          margin-right: 15px
      p
        margin: 0
        font-size: .8em
        padding-top: 5px
        text-align: center

      &-extra
        margin-top: -30px
        &-img
          img
            width: 50px
            border-radius: 5px
            // box-shadow: -1px 1px 15px rgba(0,0,0,.4);
        .time
          font-weight: 500
          color: rgba(dark-cl, .7)
        &-qu
          display: flex
          justify-content: center
          align-items: center
          i
            color: star-cl
            margin-right: 5px






