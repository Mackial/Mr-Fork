.big-display
  background-image: linear-gradient( rgba(first-cl), rgba(third-cl))
  height: 100vh
  width: 100%
  position: absolute
  display: flex
  justify-content: center
  align-items: center
  .info-display
    text-align: center
    color: light-cl
    margin: auto
    width: 80%
    img 
      width: 80px
      align-self: center
    h1
      font-family: fontOne
      font-weight: 500
      font-size: 5em
    p  
      font-size: 1.5em


@media screen and (min-width: 500px)
  .container
    visibility: hidden

@media screen and (max-width: 500px)
  .big-display
    visibility: hidden

