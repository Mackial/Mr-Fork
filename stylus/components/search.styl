.search
  width: 95%
  margin: auto
  &__cont
    display: flex
    justify-content: space-between
    flex-wrap: wrap
    &--item
      position: relative
      width: 48.5%
      height: 100px
      display: flex
      justify-content: space-between
      border: 1px solid rgba(dark-cl, .1)
      border-radius: 5px
      margin-top: 10px
      padding-left: 10px
      img 
        position: absolute
        right: 0
        height: 100%
        border-radius: 5px
      h2
        z-index: 997
        font-size: 1em
        padding-top: 5px
        font-weight: 400

