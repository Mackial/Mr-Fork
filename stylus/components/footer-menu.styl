@import 'globals.styl'

.menu
  width: 100%
  height: 60px
  box-shadow: 1px -2px 8px -3px rgba(0,0,0,0.2)
  background-color: #fff
  position: fixed
  bottom: 0
  z-index: 999
  &__button
    height: 100%
    display: flex
    justify-content: space-around
    align-items: center
    a
      display: flex
      flex-flow: column
      align-items: center
      text-decoration: none
      i
        font-size: 1.6em
        color: dark-cl
      span
        padding-top: 2px
        font-weight: 800
        font-size: .7em
        color: first-cl