@import 'globals.styl'

.top
  width: 100%
  height 70px
  background-color: white
  &-bar
    height: 100%
    background-image: linear-gradient(to right, rgba(third-cl, .8), rgba(first-cl) )
    padding-top: 20px
    box-shadow: -1px 1px 6px rgba(0,0,0,.4);
    text-align: center
    &--btn
      position: absolute
      right: 20px
      top: 22px
      a
        text-decoration: none
      i
        font-size: 1.8em
        padding-left: 10px
        color:  light-cl
        
    h1
      margin: 0
      font-family: fontOne
      font-weight: 500
      font-size: 1.7em
      color: white
    &__search
      position: fixed
      top: 20px
      right: 10px
      visibility: hidden
      display: flex
      justify-content: space-around
      margin: 0 auto
      padding: 0 5px
      width: 95%
      height: 40px
      background-color: #fff
      border-radius: 10px
      // box-shadow: -1px 1px 6px rgba(0,0,0,.4)
      input
        outline: none
        width: 80%
        background: transparent
        border: none
        font-size: 1.1em
        color: dark-cl
      .icon
        width: 40px
        height: 100%
        display: flex
        justify-content: center
        align-items: center
        i
          font-size: 1.2em
          color: rgba(dark-cl, .8)
        .cancel
          font-size: 1em

.fadeInDown
  animation: fadeInDown .5s both

@keyframes fadeInDown
  from
    // opacity: 0
    top: -40px
  to 
    // opacity: 1
    top: 20px