            +item-product("img_default.jpg", "Taco Campechano", "Taco con tortilla de maiz a mano con todas las carnes", "13.00")
          #tortas
            +item-product("img_default.jpg", "Torta Sencilla", "Torta con queso y carne de Asada, Adobada, Chorizo", "35.00")
            +item-product("img_default.jpg", "Torta Mixta", "Torta con queso con dos carnes a elegir", "35.00")
            +item-product("img_default.jpg", "Torta Campechana", "Torta con queso con todas las carnes", "35.00")
          #quesadillas
            +item-product("img_default.jpg", "Quesadilla Sencilla", "Quesadilla con tortilla de maiz a mano con solo queso", "18.00")
            +item-product("img_default.jpg", "Quesadilla Con Carne", "Quesadilla con tortilla de maiz a mano con carne de Asada, Adobada, Chorizo, Aldilla o Lengua", "25.00")
