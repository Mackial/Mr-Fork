extend components/template.pug

block content
  .content
    .profile
      .profile__main
        .main
          .main__cover
            .back.back-cover
              a(href="home.html")
                i.icon-arrow-left2
            figure
              img(src="src/assets/img/default-cover.jpg", alt="")
          .main__cont
            .main__cont--info
              .back
                a(href="home.html")
                  i.icon-arrow-left2
              .main__cont--info-data
                h2  Bussines Name
                span Address
              .main__cont--info-logo
                figure
                  img(src="src/assets/img/perfil-cover-default.svg", alt="")
                .wait-time
                  span Costo de envio 
                  i.icon-dinero
                  span.price 10
            .category
              .category__cont
                .category__cont--sect.on-sect
                  a(href="#tacos") Tacos
                .category__cont--sect
                  a(href="#quesadillas") Quesadillas
                .category__cont--sect
                  a(href="#tortas") Tortas
                .category__cont--sect
                  a(href="#bebidas") Bebidas
                .category__cont--sect
                  a(href="#extras") Extras
            
            
      .profile__content
        .cont
          #tacos
            +item-product("img_default.jpg", "Taco Sencillo", "Taco con tortilla de maiz a mano de Asada, Adobada, Chorizo, Aldilla o Lengua", "13.00")
